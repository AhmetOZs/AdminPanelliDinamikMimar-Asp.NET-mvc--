@model Mimar.Models.Siniflar.Anasayfa
@{
    ViewBag.Title = "SurecGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Süreç Güncelleme Ekranı</h2>
<br />
@using (Html.BeginForm("SurecGüncelle", "Surec", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="form-group">
    @Html.HiddenFor(x => x.AnaID)
    @Html.LabelFor(x => x.SurecParantezBaslik)
    @Html.TextBoxFor(x => x.SurecParantezBaslik, new { @class = "form-control" })
    <br />
     @Html.LabelFor(x => x.SurecBaslik)
    @Html.TextBoxFor(x => x.SurecBaslik, new { @class = "form-control" })
    <br/>
     @Html.LabelFor(x => x.SurecAciklama)
    @Html.TextBoxFor(x => x.SurecAciklama, new { @class = "form-control" })
    
   <br>
    <button class="btn btn-default" style="background-color:yellowgreen">Güncelle</button>

</div>
}
