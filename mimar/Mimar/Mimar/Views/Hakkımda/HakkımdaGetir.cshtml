@model Mimar.Models.Siniflar.Anasayfa
@{
    ViewBag.Title = "HakkımdaGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Hizmet Güncelleme Ekranı</h2>
<br />
@using (Html.BeginForm("HakkımdaGüncelle", "Hakkımda", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="form-group">
    @Html.HiddenFor(x => x.AnaID)
    @Html.LabelFor(x => x.Hakkimdaparantezbaslik)
    @Html.TextBoxFor(x => x.Hakkimdaparantezbaslik, new { @class = "form-control" })
    <br />
     @Html.LabelFor(x => x.HakkimdaBaslik1)
    @Html.TextBoxFor(x => x.HakkimdaBaslik1, new { @class = "form-control" })
    <br/>
     @Html.LabelFor(x => x.HakkimdaAciklama1)
    @Html.TextBoxFor(x => x.HakkimdaAciklama1, new { @class = "form-control" })
    <br/>
     @Html.LabelFor(x => x.HakkimdaBaslik2)
    @Html.TextBoxFor(x => x.HakkimdaBaslik2, new { @class = "form-control" })
   
    <br />
    @Html.LabelFor(x => x.HakkimdaAciklama2)
    @Html.TextBoxFor(x => x.HakkimdaAciklama2, new { @class = "form-control" })
    <br/>
    @Html.LabelFor(x => x.HakkimdaResim)
    <input type="file" src="@Model.HakkimdaResim" name="fileImg"/>
    <br/>
    
    <button class="btn btn-default" style="background-color:yellowgreen">Güncelle</button>

</div>
}

